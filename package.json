{
  "name": "textlint",
  "description": "The pluggable linting tool for text and markdown.",
  "version": "7.1.0",
  "homepage": "https://github.com/textlint/textlint/",
  "keywords": [
    "plugable",
    "text",
    "textlint",
    "markdown",
    "lint",
    "linting",
    "AST"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint/textlint.git"
  },
  "main": "lib/index.js",
  "files": [
    "bin/",
    "lib/",
    "src/",
    "typings/"
  ],
  "typings": "typings/textlint.d.ts",
  "bin": {
    "textlint": "./bin/textlint.js"
  },
  "scripts": {
    "build": "NODE_ENV=production babel src --out-dir lib --source-maps",
    "watch": "babel src --out-dir lib --watch --source-maps",
    "prepublish": "npm run --if-present build",
    "pretest": "npm run --if-present build",
    "textlint": "./bin/textlint.js -c docs/.textlintrc docs/*.md CONTRIBUTING.md -f pretty-error",
    "lint:doc": "eslint -c docs/.eslintrc.js docs/ --ext md && npm run textlint",
    "lint:js": "eslint src/",
    "test:example": "nf start --procfile test/example-test.Procfile",
    "test:js": "mocha test/",
    "test": "npm-run-all lint:doc lint:js test:js test:example",
    "perf": "cd perf && npm run perf"
  },
  "directories": {
    "test": "test/"
  },
  "author": "azu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/textlint/textlint/issues"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-espower": "^2.1.2",
    "babel-plugin-jsdoc-to-assert": "^1.4.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "clone": "^1.0.0",
    "eslint": "^3.1.1",
    "eslint-plugin-markdown": "^1.0.0-beta.1",
    "foreman": "^1.4.1",
    "glob": "^7.0.3",
    "markdown-to-ast": "^3.2.3",
    "mocha": "^2.3.3",
    "npm-run-all": "^2.1.2",
    "power-assert": "^1.3.1",
    "shelljs": "^0.7.0",
    "textlint-filter-rule-comments": "^1.2.0",
    "textlint-plugin-html": "^0.1.2",
    "textlint-rule-alex": "^1.0.1",
    "textlint-rule-helper": "^2.0.0",
    "textlint-rule-no-todo": "^2.0.0",
    "textlint-rule-preset-ja-spacing": "^1.0.2",
    "textlint-rule-preset-jtf-style": "^2.0.0",
    "textlint-rule-rousseau": "^1.4.4",
    "textlint-rule-unexpanded-acronym": "^1.2.1"
  },
  "dependencies": {
    "bluebird": "^3.0.5",
    "carrack": "0.0.5",
    "chalk": "^1.1.1",
    "debug": "^2.1.0",
    "deep-equal": "^1.0.1",
    "diff": "^2.2.2",
    "exists-sync": "0.0.3",
    "get-stdin": "^5.0.1",
    "interop-require": "^1.0.0",
    "log-symbols": "^1.0.2",
    "map-like": "^1.0.1",
    "mkdirp": "^0.5.0",
    "object-assign": "^4.0.1",
    "optionator": "^0.8.0",
    "rc-loader": "^1.0.0",
    "read-pkg": "^1.1.0",
    "string-width": "^1.0.1",
    "structured-source": "^3.0.2",
    "text-table": "^0.2.0",
    "textlint-formatter": "^1.7.3",
    "textlint-plugin-markdown": "^1.1.0",
    "textlint-plugin-text": "^1.0.1",
    "traverse": "^0.6.6",
    "try-resolve": "^1.0.1",
    "txt-ast-traverse": "^1.2.0",
    "unique-concat": "^0.2.2"
  }
}
