{
  "filters": {
    "comments": true
  },
  "rules": {
    "eslint": {
      "configFile": "./.eslintrc.js"
    },
    "prh": {
      "rulePaths": [
        "./prh.yml"
      ]
    },
    "unexpanded-acronym": {
      "ignore_acronyms": [
        "SCG",
        "CLI",
        "XML",
        "YAML",
        "JSON",
        "TODO",
        "API",
        "HTML",
        "MIT",
        "FAQ",
        "VIEW"
      ]
    },
    "rousseau": {
      "showLevels": [
        "warning",
        "error"
      ],
      "ignoreTypes": [
        "sentence:uppercase",
        "passive",
        "weasel"
      ]
    },
    "alex": false,
    "no-dead-link": {
      "checkRelative": true,
      "ignore": [
        "https://help.github.com/**",
        "https://github.com/textlint/textlint/issues/new",
        "https://git-scm.com/book/gr/v2/Customizing-Git-Git-Hooks"
      ],
      "preferGET": [
        "https://www.npmjs.com"
      ]
    }
  }
}
