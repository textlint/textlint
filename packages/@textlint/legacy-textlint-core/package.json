{
    "name": "@textlint/legacy-textlint-core",
    "version": "14.0.2",
    "description": "Legacy TextLintCore Compatibility Layer for textlint v14+",
    "keywords": [
        "definition",
        "textlint",
        "types",
        "typescript"
    ],
    "homepage": "https://github.com/textlint/textlint/tree/master/packages/@textlint/legacy-textlint-core/",
    "bugs": {
        "url": "https://github.com/textlint/textlint/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/textlint/textlint.git"
    },
    "license": "MIT",
    "author": "azu",
    "main": "lib/src/index.js",
    "types": "lib/src/index.d.ts",
    "directories": {
        "lib": "lib",
        "test": "test"
    },
    "files": [
        "bin/",
        "lib/",
        "src/",
        "!*.tsbuildinfo"
    ],
    "scripts": {
        "build": "tsc -b",
        "clean": "tsc --build --clean",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
        "prepack": "npm run --if-present build",
        "test": "tsc -b",
        "watch": "tsc -b --watch"
    },
    "prettier": {
        "printWidth": 120,
        "singleQuote": false,
        "tabWidth": 4
    },
    "dependencies": {
        "@textlint/kernel": "^14.0.2",
        "@textlint/textlint-plugin-markdown": "^14.0.2",
        "@textlint/textlint-plugin-text": "^14.0.2"
    },
    "devDependencies": {
        "@types/node": "^18.19.9",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "typescript": "~5.3.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
