  "devDependencies": {
    "@textlint/legacy-textlint-core": "^14.4.0",
    "@types/clone": "^2.1.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.19.9",
    "@types/read-pkg-up": "^3.0.1",
    "@types/shelljs": "^0.8.15",
    "clone": "^2.1.2",
    "mocha": "^10.8.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "textlint-plugin-html": "^0.3.0",
    "textlint-rule-helper": "^2.3.1",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-preset-ja-spacing": "^2.4.1",
    "textlint-rule-preset-jtf-style": "^2.3.14",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18.14.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
