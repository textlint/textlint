{
  "name": "textlint",
  "version": "11.2.4",
  "description": "The pluggable linting tool for text and markdown.",
  "keywords": [
    "AST",
    "lint",
    "linting",
    "markdown",
    "pluggable",
    "text",
    "textlint",
    "nlp"
  ],
  "homepage": "https://github.com/textlint/textlint/",
  "bugs": {
    "url": "https://github.com/textlint/textlint/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/textlint/src",
    "src/",
    "typings/"
  ],
  "main": "lib/textlint/src/index.js",
  "types": "lib/textlint/src/index.d.ts",
  "bin": {
    "textlint": "./bin/textlint.js"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "directories": {
    "test": "test/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint/textlint.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "clean": "rimraf out/ lib/",
    "prepublish": "npm run build",
    "test": "npm-run-all test:unit",
    "test:unit": "mocha \"test/**/*.{js,ts}\"",
    "watch": "tsc -p . --watch"
  },
  "dependencies": {
    "@textlint/ast-node-types": "^4.2.1",
    "@textlint/ast-traverse": "^2.1.2",
    "@textlint/feature-flag": "^3.1.2",
    "@textlint/fixer-formatter": "^3.1.4",
    "@textlint/kernel": "^3.1.5",
    "@textlint/linter-formatter": "^3.1.4",
    "@textlint/textlint-plugin-markdown": "^5.1.5",
    "@textlint/textlint-plugin-text": "^4.1.5",
    "@types/bluebird": "^3.5.18",
    "bluebird": "^3.0.5",
    "debug": "^4.1.1",
    "deep-equal": "^1.0.1",
    "file-entry-cache": "^2.0.0",
    "get-stdin": "^5.0.1",
    "glob": "^7.1.1",
    "interop-require": "^1.0.0",
    "is-file": "^1.0.0",
    "log-symbols": "^1.0.2",
    "map-like": "^2.0.0",
    "md5": "^2.2.1",
    "mkdirp": "^0.5.0",
    "object-assign": "^4.0.1",
    "optionator": "^0.8.0",
    "path-to-glob-pattern": "^1.0.2",
    "rc-config-loader": "^2.0.1",
    "read-pkg": "^1.1.0",
    "read-pkg-up": "^3.0.0",
    "structured-source": "^3.0.2",
    "try-resolve": "^1.0.1",
    "unique-concat": "^0.2.2"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "clone": "^2.1.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.3",
    "source-map-support": "^0.5.0",
    "textlint-plugin-html": "^0.1.2",
    "textlint-rule-helper": "^2.0.1",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-preset-ja-spacing": "^2.0.0",
    "textlint-rule-preset-jtf-style": "^2.3.2",
    "ts-node": "^7.0.1",
    "ts-node-test-register": "^4.0.0",
    "typescript": "~3.2.2"
  }
}
