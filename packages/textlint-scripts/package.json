{
    "directories": {
        "test": "test"
    },
    "author": "azu",
    "license": "MIT",
    "files": [
        "register.js",
        "register-ts.js",
        "bin/",
        "scripts/",
        "configs/",
        "!*.tsbuildinfo"
    ],
    "name": "textlint-scripts",
    "version": "13.3.3",
    "description": "textlint scripts help you to create textlint rule.",
    "bin": {
        "textlint-scripts": "./bin/cmd.js"
    },
    "scripts": {
        "test": "mocha",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\""
    },
    "keywords": [
        "textlint"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/textlint/textlint.git"
    },
    "bugs": {
        "url": "https://github.com/textlint/textlint/issues"
    },
    "homepage": "https://github.com/textlint/textlint/tree/master/packages/textlint-scripts",
    "devDependencies": {
        "lint-staged": "^13.2.2",
        "prettier": "^2.2.1",
        "shelljs": "^0.8.5"
    },
    "dependencies": {
        "@babel/cli": "^7.22.5",
        "@babel/core": "^7.22.5",
        "@babel/preset-env": "^7.22.5",
        "@babel/preset-typescript": "^7.22.5",
        "@babel/register": "^7.22.5",
        "babel-plugin-static-fs": "^3.0.0",
        "confirmer": "^1.1.2",
        "cross-spawn": "^7.0.3",
        "mocha": "^10.2.0",
        "pkg-to-readme": "^1.1.2",
        "textlint-tester": "^13.3.3"
    },
    "peerDependencies": {
        "ts-node": "*",
        "typescript": "*"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        },
        "ts-node": {
            "optional": true
        }
    },
    "prettier": {
        "singleQuote": false,
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css}": [
            "prettier --write"
        ]
    }
}
