{
    "directories": {
        "test": "test"
    },
    "author": "azu",
    "license": "MIT",
    "type": "commonjs",
    "files": [
        "register.js",
        "register-ts.js",
        "bin/",
        "scripts/",
        "configs/",
        "!*.tsbuildinfo"
    ],
    "name": "textlint-scripts",
    "version": "14.8.1",
    "description": "textlint scripts help you to create textlint rule.",
    "bin": {
        "textlint-scripts": "./bin/cmd.js"
    },
    "scripts": {
        "test": "mocha",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\""
    },
    "keywords": [
        "textlint"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/textlint/textlint.git"
    },
    "bugs": {
        "url": "https://github.com/textlint/textlint/issues"
    },
    "homepage": "https://github.com/textlint/textlint/tree/master/packages/textlint-scripts",
    "engines": {
        "node": ">=18.19.0"
    },
    "devDependencies": {
        "lint-staged": "catalog:",
        "prettier": "^2.2.1",
        "shelljs": "^0.10.0"
    },
    "dependencies": {
        "@babel/cli": "catalog:",
        "@babel/core": "catalog:",
        "@babel/preset-env": "catalog:",
        "@babel/preset-typescript": "catalog:",
        "@babel/register": "catalog:",
        "babel-plugin-static-fs": "catalog:",
        "confirmer": "catalog:",
        "cross-spawn": "catalog:",
        "mocha": "catalog:",
        "pkg-to-readme": "catalog:",
        "textlint-tester": "workspace:*"
    },
    "peerDependencies": {
        "ts-node": "*",
        "typescript": "*"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        },
        "ts-node": {
            "optional": true
        }
    },
    "prettier": {
        "singleQuote": false,
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css}": [
            "prettier --write"
        ]
    }
}
