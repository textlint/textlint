{
  "filters": {
    "comments": true
  },
  "rules": {
    "prh": {
      "rulePaths": [
        "./prh.yml"
      ]
    },
    "unexpanded-acronym": {
      "ignore_acronyms": [
        "SCG",
        "CLI",
        "XML",
        "YAML",
        "JSON",
        "TODO",
        "API",
        "HTML",
        "MIT",
        "FAQ"
      ]
    },
    "rousseau": {
      "showLevels": [
        "warning",
        "error"
      ],
      "ignoreTypes": [
        "sentence:uppercase",
        "passive",
        "weasel"
      ]
    },
    "alex": false
  }
}
